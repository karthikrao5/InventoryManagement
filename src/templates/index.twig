{% extends "layout.twig" %}

{% block content %}
	<h1>Equipments</h1>


	<div class="table-responsive">
		<table class="table table-striped table-bordered " id="main_table">
			<thead>
				<tr>
					<th>Dept. Tag</th>
					<th>GT Tag</th>
					<th>Status</th>
					<th>Loaned To</th>
					<th>Equipment Type Name</th>
					<th>Functions</th>
				</tr>

				{% for row in data %}
					<tr>
						<td>{{ row.departmentTag }}</td>
						<td>{{ row.gtTag }}</td>
						<td>{{ row.status }}</td>
						<td>{{ row.loanedTo }}</td>
						<td> {{ row.equipmentTypeName }}</td>
						<td><a href="">Edit</a>/<a href="">Show</a>/<a href="">Delete</a></td>
					</tr>
				{% endfor %}
				
			</thead>
			<tbody id='table_body'>
			</tbody>
		</table>
	</div>
	<a href="{{ path_for("get-add-equipment") }}">Add Equipment</a>
	<a href="{{ path_for("get-add-equipment-type") }}">Add Equipment Type</a>
	<a href="{{ path_for("get-add-equipment-type") }}">Show All Equipment Types</a>
	
{% endblock %}